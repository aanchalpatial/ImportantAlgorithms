/*Input : str = "ABC"
Output : ABC ACB BAC BCA CAB CBA*/
#include<bits/stdc++.h>
using namespace std;

//=> METHOD 1: Using C++ STL
void permutation_stl(vector<char> str){
    
    do{
        for(int i=0;i<str.size();++i) cout<<str[i];
        cout<<"\t";
    }while(next_permutation(str.begin(), str.end()));

}
//=> METHOD 2: Using Recursion + Backtracking
void permutation_recursion(string str, int l, int r){
    if (l == r) 
        cout << str << "\t"; 
    else
    { 
        for (int i = l; i <= r; i++) 
        { 
            swap(str[l], str[i]); 
            permutation_recursion(str, l+1, r); 
            swap(str[l], str[i]);   //backtrack
        } 
    } 
}

int main(){
  
  vector<char> str = {'A','B','C'};
  string str2 = "ABC";
  
  permutation_stl(str);
  cout<<endl;
  permutation_recursion(str2, 0, str2.size()-1);
  
  
  return 0;}
